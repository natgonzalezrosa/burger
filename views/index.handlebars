<div class="container">

    <!--Jumbotron-->
    <div class="jumbotron text-center pink lighten-4">

        <!--Title-->
        <h1>Eat Da Burger!</h1>
        <img src="/assets/img/burger.png" alt="Bunch of burgers" class="img-responsive center-block" style="height: 250px;">
        <img src="/assets/img/burger.png" alt="Bunch of burgers" class="img-responsive center-block" style="height: 250px;">
    </div>

    <div class="row">
        <div class="col-md-6">
            <h3>Burger Menu</h3>
            <ul class="list-group list-group-flush">
                {{#each burgers}} {{#unless this.devoured}}
                <li class="list-group-item burger-name">
                    {{this.burger_name}}
                    <form action="/burgers/updateOne{{this.id}}?_method=PUT" method="POST">
                    <input type="hidden" name="devoured" value="1">
                    <button type="button" class="btn btn-indigo btn-rounded">Devour</button>
                    </form>
                </li>
                {{/unless}} {{/each}}
            </ul>
        </div>


        <div class="col-md-6">
            <h3>Devoured Burgers</h3>
            <ul>
                {{#each burgers}} {{#if this.devoured}}
                <li class="list-group-item burger-name">
                    {{this.burger_name}}
                    <form action="/burgers/updateOne{{this.id}}?_method=PUT" method="POST">
                    <input type="hidden" name="devoured" value="0">
                    <button type="button" class="btn btn-indigo btn-rounded">Remove</button>
                    </form>
                </li>
                {{/if}} {{/each}}
            </ul>
        </div>
    </div>

    <div class="row">
        <div class="col-md-6 add-burger">
            <!-- Add a burger form -->
            <h3>Add a Burger</h3>
            <form class="create-form" method="POST" action="burgers/insertOne">

                <div class="form-group">
                    <p><label for="burg">Burger Name: </label>   <input type="text" id="burg" name="name"></p>
                </div>

                <button type="button" class="btn btn-indigo btn-rounded">Submit</button>
            </form>
            <br><br><br>
        </div>
    </div>

    <div class="row">
        <div class="col-md-12 text-center">
            <hr class="my-4 pb-2">

            <!--Subtitle-->
            <p>Burgers Never Tasted So Good!</p>
        </div>
    </div>

</div>