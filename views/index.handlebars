<div class="container">

    <!--Jumbotron-->
    <div class="jumbotron jumbotron-fluid">
         <h1 class="h1">Eat Da Burger!</h1>
        <h2>Burgers Never Taste So Good!</h2>
        <img src="/assets/img/burger.png" alt="Bunch of burgers" class="img-responsive center-block" style="height: 350px;">
    </div>

    <div class="row">
        <div class="md-col-6">
            <h1>Eat da Burger!</h1>

            <h2>Burger Menu</h2>
            <ul class="list-group list-group-flush">
                {{#each burgers}} {{#unless this.devoured}}
                <li class="list-group-item">
                    {{this.burger_name}}
                    <form action="/burgers/updateOne{{this.id}}?_method=PUT" method="POST"></form>
                    <input type="hidden" name="devoured" value="1">
                    <button type="button" class="btn btn-indigo btn-rounded">Devour</button>
                </li>
                {{/unless}} {{/each}}
            </ul>
        </div>

        
        <div class="md-col-6">
            <h2>Devoured Burgers</h2>
            <ul>
                {{#each burgers}} {{#if this.devoured}} {{/if}} {{/each}}
            </ul>

            <!-- Add a burger form -->
            <h2>Add a Burger</h2>
            <form class="create-form" method="POST" action="burgers/insertOne">

                <div class="form-group">
                    <label for="burg">Burger Name:</label>
                    <input type="text" id="burg" name="name">
                </div>

                <button type="submit">Add Burger</button>
            </form>
        </div>
    </div>
</div>